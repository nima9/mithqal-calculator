{
	"name": "mithqal-culator",
	"version": "2.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "bun run --bun vite dev",
		"build": "bun run --bun vite build",
		"preview": "wrangler pages dev .svelte-kit/cloudflare --port 4173",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "oxlint",
		"lint:fix": "oxlint --fix",
		"format": "oxfmt --write . && prettier --write \"**/*.svelte\"",
		"format:check": "oxfmt --check . && prettier --check \"**/*.svelte\"",
		"convex:dev": "bunx convex dev",
		"convex:deploy": "bunx convex deploy",
		"gen": "wrangler types"
	},
	"dependencies": {
		"@js-temporal/polyfill": "^0.5.1",
		"bits-ui": "^2.15.5",
		"convex": "^1.31.7",
		"convex-svelte": "^0.0.12"
	},
	"devDependencies": {
		"@sveltejs/adapter-cloudflare": "^7.2.6",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^25",
		"daisyui": "^5.5.16",
		"oxfmt": "^0.27.0",
		"oxlint": "^1.42.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"svelte": "^5.49.1",
		"svelte-check": "^4.3.6",
		"tailwindcss": "^4.1.18",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"wrangler": "^4.61.1"
	}
}
